<div class="container">
  <div class="row">
    <div class="col-sm-8 col-sm-offset-2">
            <article>
                <h2> 
                  <%= @article.title %>
                  <small>
                    <%= link_to fa_icon("fas edit"), edit_article_path(@article)%>
                    <%= link_to fa_icon("trash"),
                        articles_path,
                        method: :delete,
                        data: { confirm: "Are you sure?" } %>
                  </small>
                </h2>
                <%= @article.content %>
            </article>
            <%= link_to 'Back', articles_path, class: 'btn btn-secondary mt-2' %>
    </div>
  </div>
</div>

